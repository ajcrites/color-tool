{
  "name": "color-tool",
  "version": "0.0.0",
  "description": "Color tool webapp for working with CSS colors",
  "author": "Andrew Crites <ajcrites@gmail.com> (https://github.com/ajcrites)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "tsc && tslint --project tsconfig.json"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write --parser typescript --single-quote --trailing-comma all",
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lint"
    }
  },
  "dependencies": {
    "parse-color": "^1.0.0",
    "react": "^16.8.0-alpha.1",
    "react-dom": "^16.8.0-alpha.1",
    "typesafe-actions": "^3.0.0"
  },
  "devDependencies": {
    "@types/react": "^16.7.20",
    "@types/react-dom": "^16.0.11",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.1",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.16.3",
    "ts-config-mobiquity-react-native": "^5.0.0",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  }
}
